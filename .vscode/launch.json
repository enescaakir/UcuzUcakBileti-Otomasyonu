{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flight-Tracker: Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/flight-tracker.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Main: Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Scrapy: Run Spider",
            "type": "debugpy",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${workspaceFolder}/flightbot/spiders/ucuzabilet_scraper.py",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}